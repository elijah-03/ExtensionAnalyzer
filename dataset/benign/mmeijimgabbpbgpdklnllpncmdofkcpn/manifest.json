{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Screencastify - Screen Video Recorder",
  "description": "An easy-to-use screen recorder for your browser. Capture, edit and share videos in seconds.",
  "version": "4.21.3.5514",
  "version_name": "4.21.3 (88f4c964-1))",
  "manifest_version": 3,
  "permissions": [
    "alarms",
    "storage",
    "tabs",
    "activeTab",
    "offscreen",
    "scripting",
    "unlimitedStorage",
    "tabCapture",
    "desktopCapture",
    "webNavigation",
    "notifications",
    "system.display"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "storage": {
    "managed_schema": "assets/other/managed_schema.json"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Alt+Shift+S",
        "mac": "Alt+Shift+S",
        "chromeos": "Alt+Shift+S",
        "linux": "Alt+Shift+S"
      }
    },
    "toggle-start-stop": {
      "suggested_key": {
        "default": "Alt+Shift+R"
      },
      "description": "Start/Stop Recording"
    },
    "toggle-resume-pause": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      },
      "description": "Pause/Resume Recording"
    }
  },
  "host_permissions": [
    "<all_urls>",
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://app.cfy-local.com/*",
        "https://app.cfy-stage.com/*",
        "https://app.castify.com/*"
      ],
      "js": [
        "extension-installed-post-message.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_matches": [
        "https://developer.chrome.com/*"
      ],
      "js": [
        "quick-record-script.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "gmail-script.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://outlook.live.com/*"
      ],
      "match_about_blank": true,
      "js": [
        "outlook-script.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "youtube-script.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://drive.google.com/*"
      ],
      "js": [
        "google-drive-script.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://docs.google.com/presentation/*"
      ],
      "js": [
        "google-slides-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "webcam.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "resources": [
        "controller.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "resources": [
        "getting-started.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "resources": [
        "options.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "resources": [
        "offscreen.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "resources": [
        "assets/audio/*.mp3"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "resources": [
        "assets/pendo/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "resources": [
        "assets/ffmpeg/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "resources": [
        "assets/images/default-icon32.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "resources": [
        "assets/images/default-icon48.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "resources": [
        "assets/images/screencastify-white.svg"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "resources": [
        "assets/images/castify-watermark.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://app.castify.com/*",
      "https://app.cfy-local.com/*",
      "https://app.cfy-stage.com/*",
      "https://app.dev1.screencastify.com/*",
      "https://app.staging.screencastify.com/*",
      "https://app.screencastify.com/*",
      "http://localhost:4205/*",
      "http://localhost:8080/*"
    ]
  },
  "icons": {
    "16": "assets/images/default-icon16.png",
    "19": "assets/images/default-icon19.png",
    "38": "assets/images/default-icon38.png",
    "48": "assets/images/default-icon48.png",
    "128": "assets/images/default-icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/images/default-icon16.png",
      "19": "assets/images/default-icon19.png",
      "38": "assets/images/default-icon38.png",
      "48": "assets/images/default-icon48.png",
      "128": "assets/images/default-icon128.png"
    },
    "default_title": "Screencastify",
    "default_popup": "initializer.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval';"
  },
  "key": "",
  "default_locale": "en"
}